<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/list_selector"
    android:layout_height="match_parent">


    <LinearLayout

        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="0dip" >

        <ImageView

            android:id="@+id/teamOneLogo"
            android:layout_width="40dip"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:padding="0dip" >

        <ImageView

            android:id="@+id/teamTwoLogo"
            android:layout_width="40dip"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout3"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:padding="3dip" >

        <TextView

            android:id="@+id/teamtwo"
            android:text="teamone"
            android:textColor="@color/blue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="3dip"
            android:layout_width="125dip"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout4"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dip"
        android:padding="3dip" >

        <TextView

            android:id="@+id/teamone"
            android:text="teamone"
            android:textColor="@color/blue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="123dip"
            android:padding="3dip"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout5"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="144dip"
        android:padding="3dip" >

        <TextView

            android:id="@+id/vs"
            android:text="vs"
            android:textColor="@color/blue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="3dip"
            android:layout_width="35dip"
            android:layout_height="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="winning_team"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:id="@+id/winning_team"
        android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="with:"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:id="@+id/win_amount"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dip"
        android:layout_below="@+id/winning_team"
        android:layout_alignLeft="@+id/winning_team"
        android:layout_alignStart="@+id/winning_team" />

</RelativeLayout>
