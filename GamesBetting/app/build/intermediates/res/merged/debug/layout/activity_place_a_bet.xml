<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/list_selector"
        android:orientation="horizontal">

    <ImageView

        android:id="@+id/teamOneLogo"
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true" />

    <ImageView

        android:id="@+id/teamTwoLogo"
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/awayODD_textview"
        android:layout_alignEnd="@+id/awayODD_textview" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Ticket"
        android:id="@+id/viewticket"
        android:padding="10dip"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>



    <RadioGroup
        android:id="@+id/oddsgroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="29dp"
        android:layout_below="@+id/teams"
        android:layout_alignRight="@+id/viewticket"
        android:layout_alignEnd="@+id/viewticket"
        android:layout_marginTop="64dp">

        <RadioButton
            android:id="@+id/homeODD"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/duration_selector"
            android:layout_weight="2"
            />

        <RadioButton
            android:id="@+id/drawODD"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/duration_selector"
            android:layout_weight="2"
            />
        <RadioButton
            android:id="@+id/awayODD"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:drawableLeft="@drawable/duration_selector"/>.

            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Home"
        android:id="@+id/homeODD_textview"
        android:textColor="@color/blue"
        android:layout_below="@+id/oddsgroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:text="Draw"
        android:id="@+id/drawODD_textview"
        android:layout_below="@+id/oddsgroup"
        android:layout_marginLeft="145dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue"
        android:text="Away"
        android:id="@+id/awayODD_textview"
        android:layout_below="@+id/oddsgroup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/teams"
        android:textColor="@color/blue"
        android:layout_below="@+id/teamTwoLogo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add to ticket"
        android:id="@+id/add_to_ticket"
        android:padding="10dip"
        android:background="@drawable/button_text"
        android:layout_alignTop="@+id/viewticket"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NB: You can only bet before kickoff."
        android:id="@+id/notice"
        android:textColor="@color/myGreenWithAlpha"
        android:layout_above="@+id/add_to_ticket"
        android:layout_alignLeft="@+id/homeODD_textview"
        android:layout_alignStart="@+id/homeODD_textview"
        android:layout_marginBottom="52dp" />

</RelativeLayout>


