<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.Submit_Bet">


    <TextView
        android:text="Enter Your Betting Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/betting_amount"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/blue"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/betting_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/editText_betting_amount"
        android:hint="$"
        android:gravity="center"
        />

    <Button
        android:text="Submit Ticket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_text"
        android:layout_below="@+id/editText_betting_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/submit" />

</RelativeLayout>
