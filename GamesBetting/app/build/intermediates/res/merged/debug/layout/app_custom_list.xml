<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/list_selector"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/layout3"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dip"
        android:padding="3dip" >

        <TextView

            android:id="@+id/teamtwo"
            android:text="teamone"
            android:textColor="@color/lightblue"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="3dip"
            android:layout_width="155dip"
            android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout4"
        android:layout_width="143dp"
        android:layout_height="60dp"
        android:padding="3dip" >

        <TextView

            android:id="@+id/teamone"
            android:text="teamone"
            android:textColor="@color/lightblue"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="143dip"
            android:padding="3dip"
            android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout5"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dip"
        android:padding="3dip" >

        <TextView

            android:id="@+id/vs"
            android:text="vs"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="3dip"
            android:layout_width="35dip"
            android:layout_height="40dp"/>
    </LinearLayout>



        <TextView

            android:id="@+id/home"
            android:text="H"
            android:textColor="@color/black"
            android:layout_width="53dip"
            android:padding="3dip"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/layout5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dip" />

    <TextView

        android:id="@+id/draw"
        android:text="D"
        android:textColor="@color/black"
        android:layout_width="53dip"
        android:padding="3dip"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/layout5"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="144dip" />

    <TextView

        android:id="@+id/away"
        android:text="A"
        android:textColor="@color/black"
        android:layout_width="53dip"
        android:padding="3dip"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/layout5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip" />


    <TextView

        android:id="@+id/homeODD"
        android:text="Home"
        android:textColor="@color/midnightblue"
        android:layout_width="53dip"
        android:padding="3dip"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/layout4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dip" />


    <TextView

        android:id="@+id/drawODD"
        android:text="Draw"
        android:textColor="@color/midnightblue"
        android:layout_width="53dip"
        android:padding="3dip"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/homeODD"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="145dip" />

    <TextView

        android:id="@+id/awayODD"
        android:text="Away"
        android:textColor="@color/midnightblue"
        android:layout_width="53dip"
        android:padding="3dip"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/drawODD"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip" />

</RelativeLayout>
