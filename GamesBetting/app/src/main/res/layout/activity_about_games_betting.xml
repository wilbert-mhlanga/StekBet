<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myGreenWithAlpha"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/teamOneLogo"
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView

        android:id="@+id/teamTwoLogo"
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/teamOneLogo"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place a BET"
        android:id="@+id/button"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/teams"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/teamOneLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="bet amount"
        android:id="@+id/textView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="possible win"
        android:id="@+id/textView2"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount balance"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amountbalance"
        android:layout_above="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/betamount"
        android:layout_alignStart="@+id/betamount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/betamount"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/possiblewin"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/betamount"
        android:layout_alignStart="@+id/betamount" />


    <RadioGroup
        android:id="@+id/oddsgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/teams"
        android:layout_toLeftOf="@+id/teamTwoLogo"
        android:layout_toStartOf="@+id/teamTwoLogo">

        <RadioButton
            android:id="@+id/homeODD"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:button="@null"
            android:background="@drawable/duration_selector"
            android:layout_weight="1"
            android:text="33"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/drawODD"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:button="@null"
            android:background="@drawable/duration_selector"
            android:layout_weight="1"
            android:text="33"
            android:gravity="center"
            />
        <RadioButton
            android:id="@+id/awayODD"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/duration_selector"
            android:text="33"
            android:gravity="center"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="H"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="D"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/teams"
        android:layout_toEndOf="@+id/teams" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A"
        android:id="@+id/textView6"
        android:layout_below="@+id/oddsgroup"
        android:layout_toLeftOf="@+id/teamTwoLogo"
        android:layout_toStartOf="@+id/teamTwoLogo" />

</RelativeLayout>


